{
  "name": "zuna-travel-tour",
  "version": "1.0.0",
  "description": "VnBestTravel Tour - Full Stack Application",
  "private": true,
  "workspaces": [
    "server",
    "client",
    "admin-cms"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\" \"npm run dev:admin\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm start",
    "dev:admin": "cd admin-cms && npm start",
    "build": "npm run build:client && npm run build:admin",
    "build:client": "cd client && npm run build",
    "build:admin": "cd admin-cms && npm run build",
    "start:server": "cd server && npm start",
    "seed": "cd server && npm run seed",
    "seed:quick": "cd server && npm run seed:quick",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install && cd ../admin-cms && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
